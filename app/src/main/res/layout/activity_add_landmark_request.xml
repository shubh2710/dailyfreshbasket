<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dailyfreshbasket.com.in.activities.AddLandmarkRequest">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:contentPadding="5dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et_add_landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="land mark name"
                android:singleLine="true"
                android:soundEffectsEnabled="true" />
            <EditText
                android:id="@+id/et_add_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="area"
                android:singleLine="true"
                android:soundEffectsEnabled="true" />

            <EditText
                android:id="@+id/et_add_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="pin"
                android:inputType="number"
                android:singleLine="true"
                android:soundEffectsEnabled="true" />
            <Button
                android:id="@+id/b_add_land_request"
                android:background="@color/cardview_shadow_end_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Request" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
