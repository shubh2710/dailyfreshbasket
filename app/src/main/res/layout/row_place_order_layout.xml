<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:padding="5dp"
        android:id="@+id/iv_placeorder_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />
<LinearLayout
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_toEndOf="@+id/iv_placeorder_image"
    android:layout_height="wrap_content">
    <TextView
        android:padding="5dp"
        android:layout_weight="5"
        android:textSize="15dp"
        android:id="@+id/tv_placeorder_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="name" />

    <EditText
        android:id="@+id/tv_place_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:maxLength="2"
        android:inputType="number"
        android:text="3" />
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="x" />
    <TextView
        android:layout_weight="2"
        android:id="@+id/tv_place_rupees"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="300 rs" />
    <ImageButton
        android:visibility="gone"
        android:padding="5dp"
        android:background="@drawable/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_delete_black_24px" />
</LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>