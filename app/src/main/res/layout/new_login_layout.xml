<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c3ffc1"
    android:padding="30dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:visibility="visible"
        app:cardCornerRadius="30dp">

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/fui_ic_googleg_color_24dp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView4"
        android:layout_centerHorizontal="true"
        android:text="Login With Google"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/inform_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:text="If you have gmail account and registered with us, Please log in"
        android:textSize="11dp"
        android:textStyle="italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/name_of_product2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inform_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="___________________________"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_row_detail_po_productquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_of_product2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="OR" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_row_detail_po_productquantity"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_layout_name"
        android:layout_below="@+id/input_layout_name">

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bSignIn_user_SignInbutton"
        android:layout_margin="10dp"
        android:layout_marginTop="29dp"
        android:text="Forget Password"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/bSignIn_user_SignInbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_password"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Login"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_row_detail_po_amount"
        android:layout_alignBottom="@+id/tv_row_detail_po_amount"
        android:layout_alignEnd="@+id/bSignIn_user_SignInbutton"
        android:text="Create New"
        android:textColor="#ff0000"
        android:visibility="gone" />
</RelativeLayout>
