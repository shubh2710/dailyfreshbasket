<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            card_view:contentPadding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            card_view:cardElevation="5dp">
            <TextView
                android:elevation="3dp"
                android:layout_gravity="left"
                android:transformPivotY="60dp"
                android:transformPivotX="60dp"
                android:rotation="315"
android:singleLine="true"
                android:layout_width="110dp"
                android:textSize="13dp"
                android:textStyle="bold"
android:gravity="center"
                android:textColor="#fff"
                android:background="#00ba98"
                android:id="@+id/tv_product_in_search_discount"
                android:text="%"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="150dp"
                    android:id="@+id/iv_product_image_in_search_layout"
                    app:srcCompat="@drawable/ic_051_shops"
                    android:layout_height="180dp" />

                <LinearLayout
                    android:padding="6dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="1dp"
                            android:layout_weight="2"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:id="@+id/tv_product_in_search_name"
                            android:text="name of product"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="sub detail of product"
                        android:textSize="15dp"
                        android:id="@+id/tv_product_in_search_subname"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_015_money_1"
                            app:srcCompat="@drawable/ic_015_money_1"/>
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:textSize="15dp"
                            android:id="@+id/tv_product_in_search_rate"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:text="100"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:textSize="15dp"
                            android:id="@+id/tv_product_in_search_mrp"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:text="90"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="3"
                        android:visibility="gone"
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Small" />
                    <TextView
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/offer_tv"
                        android:text="Offer"
                        android:textColor="#F00"
                        />
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/search_product_aviable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avilable :5"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:weightSum="4"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_weight="1"
                            android:textColor="#fff"
                            android:visibility="gone"
                            android:id="@+id/b_search_product_buynow"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:background="@drawable/mybutton"
                            android:text="Buy Now" />

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_margin="2dp"
                            android:id="@+id/ll_quanitytLayout"
                            android:background="@drawable/mybutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Button
                                android:textColor="#fff"
                                android:id="@+id/b_search_product_minus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:background="@drawable/mybutton"
                                android:text="-" />
                            <TextView
                                android:textColor="#fff"
                                android:padding="5dp"
                                android:layout_width="30dp"
                                android:textAlignment="center"
                                android:layout_height="30dp"
                                android:id="@+id/tv_search_product_quanitiy"
                                android:text="1"/>
                            <Button
                                android:textColor="#fff"
                                android:id="@+id/b_search_product_plus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:background="@drawable/mybutton"
                                android:text="+" />
                        </LinearLayout>
                        <Button
                            android:visibility="visible"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:id="@+id/b_search_product_addTocart"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/mybutton"
                            android:text="Add" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_dis"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/price_tag_icon"/>
            <!--<TextView-->
                <!--android:rotation="45"-->
                <!--android:layout_marginBottom="0dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:textSize="13dp"-->
                <!--android:textStyle="bold"-->
                <!--android:textColor="#fff"-->
                <!--android:id="@+id/tv_product_in_search_discount"-->
                <!--android:text="6%"-->
                <!--android:paddingLeft="2dp"-->
                <!--android:layout_height="wrap_content" />-->
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productViewStock"
        android:visibility="gone"
        android:background="#afff"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:textColor="#F00"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:text="Out Of Stock"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>