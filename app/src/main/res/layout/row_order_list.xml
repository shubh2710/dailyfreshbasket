<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:id="@+id/tv_orderList_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID:3453234" />
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/tv_orderList_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_orderList_id"
            android:text="24-2-1017 11:23" />
        <ImageView
            android:id="@+id/iv_orderList_icon"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_orderList_date"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_002_cart" />

        <TextView
            android:id="@+id/tv_orderList_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_orderList_icon"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/iv_orderList_icon"
            android:text=" Bill Id" />
        <TextView
            android:id="@+id/tv_orderList_shift"
            android:layout_marginTop="5dp"
            android:layout_marginStart="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_orderList_icon"
            android:layout_below="@+id/tv_orderList_name"
            android:text="shift" />

        <Button
            android:id="@+id/b_orderList_cancel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_orderList_id"
            android:background="@drawable/mybutton"
            android:text="Cancel" />

        <TextView
            android:id="@+id/tv_orderList_rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_orderList_shift"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/iv_orderList_icon"
            android:text="300" />

        <ImageView
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/tv_orderList_rs"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/tv_orderList_rs"
            app:srcCompat="@drawable/ic_015_money_1" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_orderList_rs"
            android:layout_below="@+id/tv_orderList_rs"
            app:srcCompat="@drawable/ic_035_shopping_cart" />

        <TextView
            android:id="@+id/tv_orderList_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView9"
            android:text="status confirmation"
            android:textColor="@color/colorPrimary" />
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/b_orderList_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_orderList_status"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_delete_black_24px" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
