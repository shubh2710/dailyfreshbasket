<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dailyfreshbasket.com.in.activities.ActivityContactUs">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/appbar"
            layout="@layout/app_bar" />
    </android.support.design.widget.AppBarLayout>
<RelativeLayout
    android:layout_below="@+id/appbarLayout"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:text="i want to" />

    <Button
        android:id="@+id/b_contact_chnage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Change Devivery" />

    <Button
        android:id="@+id/b_contact_return"
        android:textColor="#fff"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/b_contact_chnage"
        android:layout_below="@+id/b_contact_chnage"
        android:layout_marginTop="18dp"
        android:text="Return/Exchange" />

    <Button
        android:id="@+id/b_contact_contact"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_alignStart="@+id/b_contact_return"
        android:layout_below="@+id/b_contact_return"
        android:text="Contact Us" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_contact_contact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Didn't find what you looking for?" />


    <ImageView
        android:id="@+id/iv_contact_find"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/ic_051_location" />

    <ImageView
        android:id="@+id/iv_contact_problem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView22"
        android:layout_alignTop="@+id/iv_contact_find"
        android:layout_marginStart="19dp"
        app:srcCompat="@drawable/ic_050_faq_help" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignTop="@+id/iv_contact_find"
        app:srcCompat="@drawable/ic_008_delivery_truck_1" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView14"
        android:layout_marginTop="13dp"
        android:text="Change Delivery" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView20"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignEnd="@+id/iv_contact_find"
        android:text="Find Us" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignParentEnd="true"
        android:text="Send Problem" />
</RelativeLayout>

</RelativeLayout>
