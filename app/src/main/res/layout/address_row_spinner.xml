<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sppiner_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="TextView" />
            <TextView
                android:id="@+id/tv_sppiner_land"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_sppiner_line"
                android:layout_below="@+id/tv_sppiner_line"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_sppiner_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tv_sppiner_land"
                android:layout_below="@+id/tv_sppiner_land"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_sppiner_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tv_sppiner_city"
                android:layout_below="@+id/tv_sppiner_city"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_sppiner_mobilr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_sppiner_state"
                android:layout_below="@+id/tv_sppiner_state"
                android:layout_marginTop="5dp"
                android:text="TextView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
